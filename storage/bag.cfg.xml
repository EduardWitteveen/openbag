<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- =================================== -->                
        <!-- ==  start database configuration == -->
        <!-- =================================== -->
        <!-- ORACLE -->
        <!-- we need the following additional stuff in classpath:
                - hibernate-spatial-oracle-1.0-M1.jar
                - ojdbc6.jar (from the oracle thin client)
        -->
        <property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="connection.url">jdbc:oracle:thin:@servername:1521:databasename</property>
        <property name="connection.username">username</property>
        <property name="connection.password">password</property>               
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernatespatial.oracle.OracleSpatial10gDialect</property>
        <!-- POSTGIS-->
        <!--
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/hibernate</property>
        <property name="connection.username">hibernate</property>
        <property name="connection.password">hibernate</property>               
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernatespatial.postgis.PostgisDialect</property>
        -->
        
        <!-- =================================== -->                
        <!-- ==  stop database configuration  == -->
        <!-- =================================== -->                
        
        
        <!-- =================================== -->                
        <!-- =================================== -->                
        <!-- =================================== -->                
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <!-- <property name="show_sql">true</property> -->
        <!-- validate / update / create / create-drop -->
        <property name="hbm2ddl.auto">update</property>
        
        <mapping class="org.nergens.bag.storage.pojo.Gemeente"/>
        <mapping class="org.nergens.bag.storage.pojo.Woonplaats"/>
        <mapping class="org.nergens.bag.storage.pojo.Openbareruimte"/>
        <mapping class="org.nergens.bag.storage.pojo.Nummeraanduiding"/>
        <mapping class="org.nergens.bag.storage.pojo.Verblijfsobject"/>
        <mapping class="org.nergens.bag.storage.pojo.Pand"/>        
        <mapping class="org.nergens.bag.storage.pojo.util.Gebruiksdoel"/>
        
    </session-factory>
</hibernate-configuration>